<div class="container">
<div class="row">
  <% @startups.each do |startup|%>
  <div class="col-lg-6 testing">
    <%= link_to startup_path(startup), style:"text-decoration: none" do %>
      <div class="card">
        <div class="additional">
          <div class="user-card">
            <div class="level index-card-center">
              <%=startup.market%>
            </div>
            <div class="points index-card-center">
              <%= startup.number_of_employees %>
            </div>
            <img src=<%=startup.logo%> class="startup-avatar index-card-center">
          </div>
          <div class="more-info">
            <h2><%= startup.name %></h2>
            <div class="coords">
              <span>Group Name</span>
              <span>Joined <%=startup.founded%> </span>
            </div>
            <div class="coords">
              <span>Position/Role</span>
              <span>City, Country</span>
            </div>
            <div class="stats">
              <div>
                <div class="title">Awards</div>
                <i class="fa fa-trophy"></i>
                <div class="value">2</div>
              </div>
              <div>
                <div class="title">Matches</div>
                <i class="fa fa-gamepad"></i>
                <div class="value">27</div>
              </div>
              <div>
                <div class="title">Pals</div>
                <i class="fa fa-gamepad"></i>
                <div class="value">123</div>
              </div>
              <div>
                <div class="title">Coffee</div>
                <i class="fa fa-coffee"></i>
                <div class="value infinity">âˆž</div>
              </div>
            </div>
          </div>
        </div>
        <div class="general">
          <h2><%= startup.name %></h2>
          <p><%= startup.pitch %></p>
          <span class="more">Mouse over the card for more info</span>
        </div>
      </div>
    <% end %>
    </div>
  <% end %>
</div>
</div>